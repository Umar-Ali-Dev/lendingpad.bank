   .add-field-btn {
      color: #141340;
      font-weight: 700;
      font-size: 14px;
      background-color: transparent;
      border: none;
      outline: none;
      display: flex;
      align-items: center;
      gap: 2px;
      justify-content: end;
      width: 100%;
   }

   .add-field-btn>span {
      width: 32px;
      height: 32px;
      background-color: #0038FF;
      border-radius: 9999px;
      padding: 2px;
      display: flex;
      justify-content: center;
      align-items: center;
   }
</style>